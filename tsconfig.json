{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["es2018", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "."
    },
    "include": ["tests/**/*"],
    "exclude": ["node_modules"]
  }